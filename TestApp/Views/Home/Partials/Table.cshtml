@model IEnumerable<TestApp.Models.ViewModel.Book>

<p>@ViewData["BooksTitle"]</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Borrowed)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (TestApp.Models.ViewModel.Book item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(o => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(o => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(o => item.Author)
                </td>
                <td>
                    @item.IsBorrowed()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GetId()">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GetId()">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GetId()">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
